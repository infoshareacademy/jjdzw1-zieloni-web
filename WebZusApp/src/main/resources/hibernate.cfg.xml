<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Czego z JDBC używać -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/zus?serverTimezone=UTC;useSSL=false</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">password</property>
        <!-- Co robić z bazą przy wstawianiu? create-drop by np. "resetowało" -->
        <property name="hibernate.hbm2ddl.auto">validate</property>
        <!-- Ustawić w zależności od bazy i wersji, Hibernate tu optymalizuje -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL57Dialect</property>
        <!-- Będzie nam ładnie logować SQL w konsoli -->
        <property name="show_sql">true</property>
    </session-factory>
</hibernate-configuration>
